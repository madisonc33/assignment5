@{
    ViewData["Title"] = "Favorite Books";
}

@model IQueryable<Books>

<div class="text-center display-3">
    <h1 class="display-4">Favorite Books</h1>
    <h6 class="text-muted">According to Spencer Hilton</h6>
</div>
<table class="table table-striped text-center table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Publisher</th>
            <th>ISBN</th>
            <th>Classification</th>
            <th>Category</th>
            <th>Price</th>

        </tr>
    </thead>
    <tbody>
    @foreach (var x in Model)
    {
        <tr>
            <th>@x.Title</th>
            <td>@x.AuthorFirst @x.AuthorMiddle @x.AuthorLast</td>
            <td>@x.Publisher</td>
            <td>@x.ISBN</td>
            <td>@x.Classification</td>
            <td>@x.Category</td>
            <td>$@x.Price</td>
        </tr>
    }
    </tbody>
</table>